/* !GLOBAL */


$.noConflict();
jQuery(document).ready(function($) {
	
  // hide #back-top first
    $("#toTop").hide();

    // fade in #back-top
    $(function () {
        $(window).scroll(function () {
            if ($(this).scrollTop() > 300) {
                $('#toTop').fadeIn(100);
            } else {
                $('#toTop').fadeOut(100);
            }
        });

        // scroll body to 0px on click
        $('#toTop a').click(function () {
            $('body,html').animate({
                scrollTop: 0
            }, 800);
            return false;
        });
    });
    	
	var toggleSpeed = 250;
	var currentSlide;
	var currentScreen = "desktop";
	
	$('body').scrollTop(1);
	
	//if(! $.browser.mobile || ! /Android|webOS|iPhone|iPad|iPod|BlackBerry/i.test(navigator.userAgent) ) {

	if( (! $.browser.mobile) && ($(window).width() > 767) ) {
		currentScreen = "desktop";
	}
	else {
		currentScreen = "mobile";
	};



	$('#navToggle').click(function(e) {
		e.preventDefault();
		$('#navToggleContainer').toggleClass('active');
		$('#searchMobile').toggle();
		$('#mainNavigation').slideToggle(toggleSpeed);
	});
	
	if ( $('FORM.jqTransform').length ) {
		$('form.jqTransform').jqTransform();	
	};
	
	// HOMEPAGE SCRIPTS
	if ( $('BODY.home').length ) {
	    $(window).resize(function() {
	    	equalHeights('#toutContainer', '.tout');
	    	equalHeights1('#toutContainer', '.toutContent');
	    });	    
	    equalHeights('#toutContainer', '.tout');
    	equalHeights1('#toutContainer', '.toutContent');	    
	};
	
	if ( $('.downloadPDFcontainer').length ) {
	    $(window).resize(function() {
	    	equalHeights('.downloadPDFcontainer', 'LI');
	    });
	    equalHeights('.downloadPDFcontainer', 'LI');
	};
	
	if ( $('.accordion').length ) {
		$('.accordionCTA').click(function() {
			var element = $(this);
			$(this).closest('.accordion').toggleClass('active');
			$(this).closest('.accordion').toggleClass('opened');
			$(this).next('.accordionBlock').slideToggle('fast', function() {
				$(this).children('SPAN.icon').toggleClass('closed');
			});
		});
	};
	
	if ( $('UL > LI SPAN.ms-rteStyle-Accordion').length ) {
		$('UL > LI SPAN.ms-rteStyle-Accordion').click(function () {
			$(this).toggleClass('active');
			
			if(navigator.appVersion.indexOf("MSIE 7.")!=-1) {
				$(this).closest('LI').find('UL').children('LI').slideToggle('fast');
			} else {
				$(this).closest('LI').next('UL').children('LI').slideToggle('fast');
			}
		});
	};
	
	if ( $('#hero .royalSlider').length ) {
		$("#hero .royalSlider").royalSlider({
			keyboardNavEnabled: true, 
			
			
			autoScaleSlider:		true,
			autoScaleSliderHeight:	310,
			autoScaleSliderWidth:	960, 
			
			controlNavigation:		'bullets',
			controlsInside:			true,
			
			slidesSpacing:			0,
			imageScalePadding:		0,
			
			loop:					true,
			
			autoPlay: {
				enabled:			true,
				pauseOnHover:		true,
				delay:				7000,
				stopAtAction:		false
			}
	    });
	    
	    var heroSlider = $("#hero .royalSlider").data('royalSlider');
	};

	updateNavigation(currentScreen, toggleSpeed, heroSlider);

	$(window).resize(function() {
		if( (! $.browser.mobile) && ($(window).width() > 767) ) {
			if (currentScreen != "desktop") {
				currentScreen = "desktop";
				updateNavigation(currentScreen, toggleSpeed, heroSlider);
			}
		}
		else {
			if (currentScreen != "mobile") {
				currentScreen = "mobile";
				updateNavigation(currentScreen, toggleSpeed, heroSlider);
			}
		}
	});
	
	if ( $('.asideSlider.royalSlider').length ) {
		$(".asideSlider.royalSlider").royalSlider({
			keyboardNavEnabled: true, 
			
			
			autoScaleSlider:		true,
			autoScaleSliderHeight:	150,
			autoScaleSliderWidth:	240, 
			
			controlNavigation:		'bullets',
			controlsInside:			true,
			
			slidesSpacing:			0,
			imageScalePadding:		0,
			
			loop:					true,
			
			autoPlay: {
				enabled:			true,
				pauseOnHover:		true,
				delay:				7000,
				stopAtAction:		false
			}
	    });
	    
	    asideSlider = $(".asideSlider").data('royalSlider');
	    
	    asideSlider.ev.on('rsBeforeAnimStart', function(event) {
			currentSlide = asideSlider.currSlideId + 1;
			
			updateAsideSlider();
		});
	};

	if ( $('.insideSlider.royalSlider').length ) {
		$(".insideSlider.royalSlider").royalSlider({
			keyboardNavEnabled: true, 
			
			
			autoScaleSlider:		true,
			autoScaleSliderHeight:	144,
			autoScaleSliderWidth:	316, 

			controlNavigation:		'bullets',
			controlsInside:			true,
			
			slidesSpacing:			0,
			imageScalePadding:		0,
			
			loop:					true,
			
			autoPlay: {
				enabled:			true,
				pauseOnHover:		true,
				delay:				7000,
				stopAtAction:		false
			}
	    });
	    
	    var insideSlider = jQuery(".insideSlider").data('royalSlider');
	    
	    insideSlider.ev.on('rsBeforeAnimStart', function(event) {
			currentSlide = insideSlider.currSlideId + 1;
			
			updateInsideSlider();
		});
	};
	
	function equalHeights(container, item) {
		$(container).each(function() {
	        var highestBox = 0;
	        $(this).find(item).each(function(){
	            if($(this).height() > highestBox) {
	                highestBox = $(this).height();
	            }
	        });
	        $(this).find(item).css({'min-height': highestBox});
	    });
	};
	
	function equalHeights1(container, item) {
		$(container).each(function() {
	        var highestBox = 0;
	        $(this).find(item).each(function(){
	            if($(this).height() > highestBox) {
	                highestBox = $(this).height();
	            }
	        });
	        $(this).find(item).css({'height': highestBox});
	    });
	};

	function updateAsideSlider(e) {
		$('.asideSlideContent').fadeTo(200, 0).hide();
		$('.asideSlideContent[data-asidecontent='+currentSlide+']').show().fadeTo(200, 1);
		$('.asideSlideContent[data-asidecontent='+currentSlide+']').addClass("hello");
	};
	
	function updateInsideSlider(e) {
		$('.insideSlideContent').fadeTo(200, 0).hide();
		$('.insideSlideContent[data-asidecontent='+currentSlide+']').show().fadeTo(200, 1);
		$('.insideSlideContent[data-asidecontent='+currentSlide+']').addClass("hello");
	};
	
});

function updateNavigation(currentScreen, toggleSpeed, heroSlider) {
	$ = jQuery;
	if( (currentScreen == "desktop") ) {

		$('.hasSecondary > A').unbind('click');
		$('.secondaryNavigation DL > DT > A').unbind('click');
		$('#mainFooter DT A').unbind('click');
		$('.hasSecondary > A').blur();
		$('#contentAside').addClass('contentAside');
		
		// Toggle Main Navigation by Mouse
		$('.hasSecondary').mouseenter(function() {
			if (currentScreen == "desktop") {
				//console.log("in mouse enter");
				$(this).addClass('active');
				$(this).find('.secondaryNavigation').fadeIn();
				
				

				if( $('#hero .royalSlider').length ) {
					heroSlider.stopAutoPlay();
				}

			}
		});

		$('.hasSecondary').mouseleave(function() {
			//console.log("mmmm::: " + currentScreen);
			if (currentScreen == "desktop") {
				//console.log("in mouse out");
				$(this).removeClass('active');
				$(this).find('.secondaryNavigation').hide();
				

				if( $('#hero .royalSlider').length ) {
					heroSlider.startAutoPlay();
				}

			}
		});

		// Toggle Main Navigation by Tabbing
		$('.hasSecondary > A').focus(function() {
			$('.hasSecondary').removeClass('active');
			$('.hasSecondary > A').removeClass('active');
			$(this).closest('.hasSecondary').addClass('active');
			$(this).addClass('active');
			$('.secondaryNavigation').fadeOut();
			$(this).next('.secondaryNavigation').fadeIn();
		});

		$('.secondaryNavigation DL.last DD.last A').blur(function() {
			$('.hasSecondary').removeClass('active');
			$(this).closest('.hasSecondary').removeClass('active');
			$(this).closest('.secondaryNavigation').fadeOut();
		});
		
		
	}
	else {
		// Toggle Main Navigation by Touch
		$('.hasSecondary').unbind('mouseenter');
		$('.hasSecondary').unbind('mouseleave');
		$('.hasSecondary > A').unbind('focus');
		$('.secondaryNavigation DL.last DD.last A').unbind('blur');
		$('.hasSecondary > A').unbind('click');
		$('.secondaryNavigation DL > DT > A').unbind('click');
		$('#contentAside').removeClass('contentAside');

		$('.hasSecondary > A').click(function(e) {
			e.preventDefault();
			$('.secondaryNavigation DL > DT').removeClass('active');
			$('.secondaryNavigation DL > DT > A').removeClass('active');
			$('.secondaryNavigation DL > DD').filter(':visible').slideUp(toggleSpeed);
			$('.secondaryNavigation').filter(':visible').slideUp(toggleSpeed);

			if ( $(this).hasClass('active') ) {
				$('.hasSecondary > A').removeClass('active');
				$(this).next('.secondaryNavigation').slideUp(toggleSpeed);
			}
			else {
				$('.hasSecondary > A').removeClass('active')
				$(this).addClass('active');
				$(this).next('.secondaryNavigation').slideDown(toggleSpeed);
			};
		});

		$('.secondaryNavigation DL > DT').each(function() {

			var $this = $(this);
				
			if ($this.siblings('dd').length) {
				$this.children('a').click(function(e) {
					e.preventDefault();
					$('.secondaryNavigation DL > DD').filter(':visible').slideUp(toggleSpeed);
					if ( $(this).hasClass('active') ) {
						$('.secondaryNavigation DL > DT > A').removeClass('active');
						$('.secondaryNavigation DL > DT').removeClass('active');
						$(this).closest('DL').find('DD').slideUp(toggleSpeed);
					} else {
						$('.secondaryNavigation DL > DT > A').removeClass('active');
						$('.secondaryNavigation DL > DT').removeClass('active');
						$(this).addClass('active');
						$(this).closest('DL').find('DT').addClass('active');
						$(this).closest('DL').find('DD').slideDown(toggleSpeed);
					}
				});
			}		
		});
		
		$('#mainFooter DT A').click(function(e) {
			e.preventDefault();
			$('#mainFooter DD').filter(':visible').slideUp(toggleSpeed);

			if ( $(this).hasClass('active') ) {
				$('#mainFooter DL > DT > A').removeClass('active');
				$('#mainFooter DL > DT').removeClass('active');
				$(this).closest('DL').find('DD').slideUp(toggleSpeed);
			} else {
				$('#mainFooter DL > DT > A').removeClass('active');
				$('#mainFooter DL > DT').removeClass('active');
				$(this).addClass('active');
				$(this).closest('DL').find('DT').addClass('active');
				$(this).closest('DL').find('DD').slideDown(toggleSpeed);
			}
		});
	};
};



// iOS Orientation Zoom Fix
(function(w){var ua=navigator.userAgent;if(!(/iPhone|iPad|iPod/.test(navigator.platform)&&/OS [1-5]_[0-9_]* like Mac OS X/i.test(ua)&&ua.indexOf("AppleWebKit")>-1)){return;}
var doc=w.document;if(!doc.querySelector){return;}
var meta=doc.querySelector("meta[name=viewport]"),initialContent=meta&&meta.getAttribute("content"),disabledZoom=initialContent+",maximum-scale=1",enabledZoom=initialContent+",maximum-scale=10",enabled=true,x,y,z,aig;if(!meta){return;}
function restoreZoom(){meta.setAttribute("content",enabledZoom);enabled=true;}
function disableZoom(){meta.setAttribute("content",disabledZoom);enabled=false;}
function checkTilt(e){aig=e.accelerationIncludingGravity;x=Math.abs(aig.x);y=Math.abs(aig.y);z=Math.abs(aig.z);if((!w.orientation||w.orientation===180)&&(x>7||((z>6&&y<8||z<8&&y>6)&&x>5))){if(enabled){disableZoom();}}
else if(!enabled){restoreZoom();}}
w.addEventListener("orientationchange",restoreZoom,false);w.addEventListener("devicemotion",checkTilt,false);})(this);

